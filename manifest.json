{
  "manifest_version": 3,
  "name": "Link Sharer",
  "version": "1.0",
  "permissions": ["contextMenus", "tabs", "scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"]
}
